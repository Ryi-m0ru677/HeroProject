    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
         >
        <RelativeLayout 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#d5d7db">
            <ImageView 
                android:id="@+id/fuwenImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/fuwen_index"
                android:layout_centerInParent="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fuwenImg"
                android:layout_centerHorizontal="true"
                android:text="符文"
                android:textColor="#393f52"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="#d5d7db" >

            <ImageView
                android:id="@+id/tianfuImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:src="@drawable/tianfu_index" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tianfuImg"
                android:layout_centerHorizontal="true"
                android:text="天赋模拟器"
                android:textColor="#393f52"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:background="#d5d7db"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" 
            android:layout_marginLeft="2dp">

            <ImageView
                android:id="@+id/gongluoImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:src="@drawable/gongluo_index" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gongluoImg"
                android:layout_centerHorizontal="true"
                android:text="攻略"
                android:textColor="#393f52"
                android:textSize="15sp" />

        </RelativeLayout>

    </LinearLayout>

